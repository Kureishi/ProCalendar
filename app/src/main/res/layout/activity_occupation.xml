<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_2"
    tools:context=".occupationActivity">

    <ImageView
        android:id="@+id/setupSubheading"
        android:layout_width="63dp"
        android:layout_height="29dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="90dp"
        app:srcCompat="@drawable/setup_subheading"/>

    <ImageView
        android:id="@+id/selectModeMessage"
        android:layout_width="326dp"
        android:layout_height="29dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="130dp"
        app:srcCompat="@drawable/select_mode" />

    <ImageView
        android:id="@+id/noteModeChangeableMessage"
        android:layout_width="306dp"
        android:layout_height="116dp"
        android:layout_below="@+id/selectModeMessage"
        android:layout_marginTop="15dp"
        android:layout_centerHorizontal="true"
        app:srcCompat="@drawable/note_mode_changeable" />

    <ImageButton
        android:id="@+id/studentOptionButton"
        android:layout_width="305dp"
        android:layout_height="76dp"
        android:layout_below="@+id/noteModeChangeableMessage"
        android:layout_marginTop="15dp"
        android:layout_centerHorizontal="true"
        android:scaleType="fitCenter"
        android:background="@android:color/transparent"
        app:srcCompat="@drawable/student_option_button" />

    <ImageButton
        android:id="@+id/entrepreneurOptionButton"
        android:layout_width="305dp"
        android:layout_height="76dp"
        android:layout_below="@+id/studentOptionButton"
        android:layout_marginTop="20dp"
        android:layout_centerHorizontal="true"
        android:scaleType="fitCenter"
        android:background="@android:color/transparent"
        app:srcCompat="@drawable/entrepreneur_option_button" />

    <ImageButton
        android:id="@+id/professionalOptionButton"
        android:layout_width="305dp"
        android:layout_height="76dp"
        android:layout_below="@+id/entrepreneurOptionButton"
        android:layout_marginTop="20dp"
        android:layout_centerHorizontal="true"
        android:scaleType="fitCenter"
        android:background="@android:color/transparent"
        app:srcCompat="@drawable/professional_option_button" />

</RelativeLayout>